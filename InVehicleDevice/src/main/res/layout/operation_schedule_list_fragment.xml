<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.kogasoftware.odt.invehicledevice.ui.FlickUnneededListView
        android:id="@+id/operation_schedule_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/operation_schedule_list_buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/operation_schedule_list_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/operation_schedule_list_close_button"
            style="@style/ModalView.Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingBottom="15sp"
            android:paddingTop="15sp"
            android:text="@string/it_returns"
            android:textSize="30sp" />

        <Button
            android:id="@+id/operation_schedule_list_show_passengers_button"
            style="@style/ModalView.Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingBottom="15sp"
            android:paddingTop="15sp"
            android:text="@string/show_passengers"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>