<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout"
    android:padding="0dip" >

    <WebView
        android:id="@+id/platform_navigation_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/platform_navigation_close_button"
        style="@style/ModalView.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="70dp"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        android:text="@string/it_closes"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/platform_navigation_modal_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/platform_memo"
        android:textSize="26sp" />

</RelativeLayout>
