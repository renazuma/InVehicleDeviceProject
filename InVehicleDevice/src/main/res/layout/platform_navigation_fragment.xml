<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/platform_navigation_modal_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/platform_memo"
        android:textSize="26sp" />

    <Button
        android:id="@+id/platform_navigation_close_button"
        style="@style/ModalView.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        android:text="@string/it_closes"
        android:textSize="30sp" />

</LinearLayout>