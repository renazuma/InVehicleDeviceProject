<?xml version="1.0" encoding="utf-8"?>

<!-- 未乗降画面設定 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ModalView.Layout"
    tools:context=".view.activity.EmptyActivity" >

    <com.kogasoftware.odt.invehicledevice.view.fragment.utils.FlickUnneededListView
        android:id="@+id/error_reservation_list_view"
        style="@style/ModalView.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_fragment_buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/check_fragment_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/complete_with_error_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:paddingBottom="15sp"
            android:paddingTop="15sp"
            android:background="@drawable/custom_button"
            android:text="@string/it_go_to_next_view"
            android:textColor="@drawable/custom_button_text_color"
            android:textSize="30sp" />

        <Button
            android:id="@+id/get_off_check_close_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:paddingBottom="15sp"
            android:paddingTop="15sp"
            android:background="@drawable/custom_button"
            android:text="@string/it_returns_to_platform_modal_view"
            android:textColor="@color/custom_btn_text_color"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>