<?xml version="1.0" encoding="utf-8"?>

<!-- 乗降所メモ画面設定 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/platform_memo_modal_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/platform_memo"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/platform_memo_text_view"
        style="@style/ModalView.Content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:textSize="30sp" />

    <Button
        android:id="@+id/platform_memo_close_button"
        style="@style/ModalView.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        android:background="@drawable/custom_button"
        android:textColor="@drawable/custom_button_text_color"
        android:text="@string/it_closes"
        android:textSize="30sp" />

</LinearLayout>