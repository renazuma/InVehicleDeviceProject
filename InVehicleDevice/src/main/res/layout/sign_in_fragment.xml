<?xml version="1.0" encoding="utf-8"?>

<!-- sign_in画面？sign_in_preferenceがあるので、何に使うのかがわからない -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/info"
            android:contentDescription="インフォメーションアイコン"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="@string/location_description" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/save_config_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/custom_button"
        android:textColor="@drawable/custom_button_text_color"
        android:text="@string/ok"
        android:paddingVertical="10dp"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>