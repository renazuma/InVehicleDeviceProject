<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout" >

    <TextView
        android:id="@+id/schedule_changed_modal_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="26sp"
        android:text="@string/operation_schedule_was_changed" />

    <TextView
        android:id="@+id/schedule_changed_text_view"
        style="@style/ModalView.Content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/schedule_changed_modal_buttons"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/schedule_changed_modal_title_text_view"
        android:textSize="30sp"
        android:layout_margin="5dip"
        android:background="@drawable/border" />

    <LinearLayout
        android:id="@+id/schedule_changed_modal_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/schedule_confirm_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="@string/show_operation_schedule" />

        <Button
            android:id="@+id/schedule_changed_close_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="@string/it_returns" />
    </LinearLayout>

</RelativeLayout>