<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/navigation_close_button"
            style="@style/ModalView.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/it_returns" />

        <Button
            android:id="@+id/navigation_zoom_in_button"
            style="@style/ModalView.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zoom_in" />

        <Button
            android:id="@+id/navigation_zoom_out_button"
            style="@style/ModalView.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zoom_out" />
    </LinearLayout>

</FrameLayout>