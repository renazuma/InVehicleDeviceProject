<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/return_path_title_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="予約番号:1234 古賀太郎様 復路の予約"
        android:textColor="#000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="アスピア玉城　→　玉城町役場前"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/reservation_candidate_hour_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="時"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/reservation_candidate_minute_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="分"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/reservation_candidate_in_or_out_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/search_return_path_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="予約候補を検索" />
    </LinearLayout>

    <ListView
        android:id="@+id/reservation_candidates_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/do_reservation_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="予約する" />

    <com.kogasoftware.odt.invehicledevice.modal.HideModalButton
        android:id="@+id/return_path_close_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="戻る" />

</LinearLayout>