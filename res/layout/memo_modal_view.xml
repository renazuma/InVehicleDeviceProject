<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/memo_modal_view_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            style="@style/ModalView.Title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="予約メモ" />

        <TextView
            style="@style/ModalView.Title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ユーザーメモ" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/memo_close_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/memo_modal_view_titles" >

        <TextView
            android:id="@+id/reservation_memo_text_view"
            style="@style/ModalView.Content"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/user_memo_text_view"
            style="@style/ModalView.Content"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/border" />
    </LinearLayout>

    <Button
        android:id="@+id/memo_close_button"
        style="@style/ModalView.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/it_closes" />

</RelativeLayout>