<?xml version="1.0" encoding="utf-8"?>
<com.kogasoftware.odt.invehicledevice.OverlayLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vehicle_notification_overlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="gone" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="管理者から連絡があります。"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <com.kogasoftware.odt.invehicledevice.OverlayCloseButton
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="はい" />

    <com.kogasoftware.odt.invehicledevice.OverlayCloseButton
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="いいえ" />

</com.kogasoftware.odt.invehicledevice.OverlayLinearLayout>