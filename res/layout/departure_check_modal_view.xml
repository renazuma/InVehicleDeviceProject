<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout" >

    <TextView
        android:id="@+id/departure_check_modal_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/error_reservation_list_view"
        style="@style/ModalView.Content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/departure_check_modal_buttons"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/departure_check_modal_title_text_view"
        android:layout_margin="5dip"
        android:background="@drawable/border" />

    <LinearLayout
        android:id="@+id/departure_check_modal_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/departure_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/it_leaves" />

        <Button
            android:id="@+id/departure_check_close_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>