<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout" >

    <TextView
        android:id="@+id/return_path_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/return_path_demand_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/return_path_title_text_view"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/reservation_candidate_hour_spinner"
            style="@style/ModalView.Content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            style="@style/ModalView.Content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:text="@string/hour" />

        <Spinner
            android:id="@+id/reservation_candidate_minute_spinner"
            style="@style/ModalView.Content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            style="@style/ModalView.Content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:text="@string/minute" />

        <Spinner
            android:id="@+id/reservation_candidate_in_or_out_spinner"
            style="@style/ModalView.Content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/search_return_path_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_reservation_candidate" />
    </LinearLayout>

    <Button
        android:id="@+id/reservation_candidate_scroll_up_button"
        style="@style/ModalView.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/return_path_demand_view"
        android:text="@string/scroll_up" />

    <ListView
        android:id="@+id/reservation_candidates_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/reservation_candidate_scroll_down_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reservation_candidate_scroll_up_button"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/border" />

    <Button
        android:id="@+id/reservation_candidate_scroll_down_button"
        style="@style/ModalView.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/return_path_submit_buttons"
        android:layout_alignParentLeft="true"
        android:text="@string/scroll_down" />

    <LinearLayout
        android:id="@+id/return_path_submit_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/do_reservation_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/it_reserves" />

        <Button
            android:id="@+id/return_path_close_button"
            style="@style/ModalView.Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/it_returns" />
    </LinearLayout>

</RelativeLayout>