<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModalView.Layout" >

    <TextView
        android:id="@+id/platform_memo_modal_title_text_view"
        style="@style/ModalView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/platform_memo"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/platform_memo_text_view"
        style="@style/ModalView.Content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/platform_memo_close_button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/platform_memo_modal_title_text_view"
        android:layout_margin="5dip"
        android:background="@drawable/border"
        android:textSize="30sp" />

    <Button
        android:id="@+id/platform_memo_close_button"
        style="@style/ModalView.Button"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        android:text="@string/it_closes"
        android:textSize="30sp" />

</RelativeLayout>