<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/icon_text_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center|center"
                    android:text="@string/icon"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/operation_phase_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center|center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/network_strength_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@drawable/network_strength_0" />

                    <TextView
                        android:id="@+id/phase_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/present_time_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:text="@string/present_time" />

                    <TextView
                        android:id="@+id/present_time_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <FrameLayout
                    android:id="@+id/driving_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:id="@+id/driving_view1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="@string/next_platform_is"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <TextView
                                android:id="@+id/next_platform_name_ruby_text_view"
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:textSize="50dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/platform_arrival_time_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:textSize="50dip" />

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="@string/arrival_schedule"
                                android:textSize="50dip" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/num_riding_reservations_text_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:textSize="20dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/driving_view2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="@string/next_platform_is"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <TextView
                                android:id="@+id/next_platform_name_text_view"
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:textSize="50dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <jp.tomorrowkey.android.vtextviewer.VTextView
                                android:id="@+id/platform_name_1_beyond_text_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <jp.tomorrowkey.android.vtextviewer.VTextView
                                android:id="@+id/platform_name_2_beyond_text_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <jp.tomorrowkey.android.vtextviewer.VTextView
                                android:id="@+id/platform_name_3_beyond_text_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/waiting_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="@string/next_platform_is" />

                        <TextView
                            android:id="@+id/platform_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:textSize="20dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="@string/departure_schedule" />

                        <TextView
                            android:id="@+id/platform_departure_time_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:textSize="20dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="@string/remain" />

                        <TextView
                            android:id="@+id/minutes_remaining"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:textColor="#ff0000"
                            android:textSize="20dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="@string/minute" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/reservation_scroll_up_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/scroll_up" />

                    <ListView
                        android:id="@+id/reservation_list_view"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/reservation_scroll_down_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/scroll_down" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/finish_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/todays_operation_was_finished"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_button_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/config_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/operation_management"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/map_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/map"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/schedule_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/today_operation_schedule"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/change_phase_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/it_arrived"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

    <com.kogasoftware.odt.invehicledevice.modal.ConfigModal
        android:id="@+id/config_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.NavigationModal
        android:id="@+id/navigation_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.NotificationModal
        android:id="@+id/notification_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.PauseModal
        android:id="@+id/pause_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.ReturnPathModal
        android:id="@+id/return_path_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.ScheduleModal
        android:id="@+id/schedule_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.ScheduleChangedModal
        android:id="@+id/schedule_changed_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.StartCheckModal
        android:id="@+id/start_check_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.StopCheckModal
        android:id="@+id/stop_check_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.MemoModal
        android:id="@+id/memo_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.StopModal
        android:id="@+id/stop_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modal.LoginModal
        android:id="@+id/login_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</merge>