<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/icon_text_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center|center"
                    android:text="@string/icon"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:id="@+id/operation_phase_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center|center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/network_strength_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@drawable/network_strength_0" />

                    <TextView
                        android:id="@+id/phase_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/present_time_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:text="@string/present_time" />

                    <TextView
                        android:id="@+id/present_time_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <com.kogasoftware.odt.invehicledevice.phaseview.DrivePhaseView
                    android:id="@+id/driving_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <com.kogasoftware.odt.invehicledevice.phaseview.PlatformPhaseView
                    android:id="@+id/waiting_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />

                <com.kogasoftware.odt.invehicledevice.phaseview.FinishPhaseView
                    android:id="@+id/finish_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_button_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/config_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/operation_management"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/map_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/map"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/schedule_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/today_operation_schedule"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/change_phase_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/it_arrived"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

    <com.kogasoftware.odt.invehicledevice.modalview.ConfigModalView
        android:id="@+id/config_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.NavigationModalView
        android:id="@+id/navigation_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.NotificationModalView
        android:id="@+id/notification_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.PauseModalView
        android:id="@+id/pause_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.ReturnPathModalView
        android:id="@+id/return_path_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.ScheduleModalView
        android:id="@+id/schedule_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.ScheduleChangedModalView
        android:id="@+id/schedule_changed_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.StartCheckModalView
        android:id="@+id/start_check_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.StopCheckModalView
        android:id="@+id/stop_check_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.MemoModalView
        android:id="@+id/memo_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.StopModalView
        android:id="@+id/stop_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.kogasoftware.odt.invehicledevice.modalview.LoginModalView
        android:id="@+id/login_modal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</merge>