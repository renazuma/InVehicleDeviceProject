<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:id="@+id/root_frame_layout"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/icon_text_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#aaffaa"
                    android:gravity="center|center"
                    android:text="(アイコン)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/status_text_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#aaffaa"
                    android:gravity="center|center"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#aaffaa"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:text="現在時刻"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:text="14時56分"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout
                    android:id="@+id/driving_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/driving_view1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="次は、"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/next_platform_name_ruby_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="50dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/platform_arrival_time_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="50dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="到着予定"
                                android:textColor="#000000"
                                android:textSize="50dip" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/driving_view2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="次は、"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/next_platform_name_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:textColor="#000000"
                                android:textSize="50dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <jp.tomorrowkey.android.vtextviewer.VTextView
                                android:id="@+id/platform_name_1_beyond_text_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000" />

                            <jp.tomorrowkey.android.vtextviewer.VTextView
                                android:id="@+id/platform_name_2_beyond_text_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000" />

                            <jp.tomorrowkey.android.vtextviewer.VTextView
                                android:id="@+id/platform_name_3_beyond_text_view"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/waiting_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="次は"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/platform_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="出発時刻"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/platform_departure_time_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="15時00分"
                            android:textColor="#000000"
                            android:textSize="20dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="あと"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="2"
                            android:textColor="#ff0000"
                            android:textSize="20dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="分"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/reservation_scroll_up_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="上へ移動" />

                    <ListView
                        android:id="@+id/reservation_list_view"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/reservation_scroll_down_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="下へ移動" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#aaffaa"
            android:orientation="vertical">

            <Button
                android:id="@+id/config_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="運行管理"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/map_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="地図"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/schedule_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="本日の運行予定"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/change_status_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="到着しました"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/modal_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    </FrameLayout>

</FrameLayout>