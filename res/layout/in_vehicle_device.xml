<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/side_button_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/map_button"
            style="@style/SideButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/map"
            android:textSize="30sp" />

        <Button
            android:id="@+id/schedule_button"
            style="@style/SideButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/today_operation_schedule"
            android:textSize="30sp" />

        <Button
            android:id="@+id/change_phase_button"
            style="@style/SideButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/it_arrives"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/side_button_view"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/icon_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1.3"
            android:gravity="center|center"
            android:paddingLeft="5dip" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:padding="5dip"
                android:src="@drawable/bus" />

            <ImageView
                android:id="@+id/network_strength_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:paddingBottom="5dip"
                android:paddingRight="16dip"
                android:src="@drawable/network_strength_0" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/operation_phase_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:gravity="center|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phase_text_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/present_time_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:gravity="center|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/present_time_text_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/platform_memo_button_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:gravity="center|center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/platform_memo_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/platform_memo"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/phase_view_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topbar"
        android:layout_toLeftOf="@+id/side_button_view" />

    <FrameLayout
        android:id="@+id/modal_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/alert_image_view"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dip"
        android:src="@drawable/alert"
        android:visibility="gone" />

</RelativeLayout>